<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/about_bg"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    tools:context=".AboutActivity" >

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/versionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoImageView"
        android:layout_centerHorizontal="true"
        android:text="@string/version"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/publish_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/versionNumber"
        android:layout_centerHorizontal="true"
        android:text="@string/publish_info"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weixin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/publish_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/weixin"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weixin_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weixin"
        android:layout_centerHorizontal="true"
        android:text="@string/weixin_id"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/qq_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weixin_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/qq_group"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/qq_group_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qq_group"
        android:layout_centerHorizontal="true"
        android:text="@string/qq_group_id"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/feedback_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qq_group_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/feedback_email"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/feedback_email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_email"
        android:layout_centerHorizontal="true"
        android:autoLink="email"
        android:text="@string/feedback_email_address"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/go_lang_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_email_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/go_lang_group"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/go_lang_group_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/go_lang_group"
        android:layout_centerHorizontal="true"
        android:autoLink="web"
        android:text="@string/go_lang_group_link"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/donate_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/donate_address"
        android:layout_alignRight="@+id/donate_address"
        android:layout_below="@+id/go_lang_group_link"
        android:layout_marginTop="20dp"
        android:text="@string/donate_info"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/donate_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/donate_info"
        android:layout_centerHorizontal="true"
        android:autoLink="web"
        android:text="@string/donate_address"
        android:textAlignment="center" />

</RelativeLayout>